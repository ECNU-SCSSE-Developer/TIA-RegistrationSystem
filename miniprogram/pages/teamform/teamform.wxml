<!--pages/teamform/teamform.wxml-->
<view class='form-title'>
  <text>招聘信息</text>
</view>

<view class='input-area'>
  <form bindsubmit="formSubmit">
    <input name='name' type='text' placeholder=' 请填写项目名称' confirm-type='next' focus='true'></input>


    <radio-group class="radio-group" bindchange="radioChangeGender">
      <label class="radio" wx:for="{{gender}}" wx:key="gender">
        <radio value="{{item.name}}" color=" #09BB07" />{{item.value}}
      </label>
    </radio-group>


    <input name='num' type='number' placeholder=' 请输入学号' confirm-type='next' minlength='11' maxlength='11'></input>


   
<view class="section">
    <view class="line">
      <picker bindchange="bindCasePickerChange_position" value='{{}}' range='{{array}}'>
        <view class="picker">
          {{array[index_position]}}
        </view>
      </picker>
    </view>
  </view>

    <view class="content">
      <textarea name='description' style="width:95%;margin-left:3%;margin-top:3%;resize:none;" placeholder="请输入项目简介"></textarea>
    </view>

    <view class="content">
      <textarea name='requirements' style="width:95%;margin-left:3%;margin-top:3%;resize:none;" placeholder="请输入招募要求"></textarea>
    </view>

    <button class="btn" formType="submit">发布</button>
  </form>
</view>