.form-title {
  font-size: 25px;
  margin-top: 20px;
  margin-bottom: 20px;
  margin-left: 30px;
}

.content {
  border: solid 1px #638af2;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgb(161, 161, 161);
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  margin-top: 40px;
  margin-bottom: 20px;
  padding: 3px;
}

.textarea {
  margin: auto;
  width: 100%;
  height: 5em;
  margin-top: 3px;
  padding: 3px;
}

.line {
  border-bottom: solid 1px #638af2;
  box-shadow: 0rpx 2rpx 0rpx 0rpx rgb(202, 202, 202);
  margin-top: 40px;
  margin-bottom: 20px;
}

.input-area {
  margin-left: 30px;
  margin-right: 30px;
}

.input-area input {
  border-bottom: solid 1px #638af2;
  box-shadow: 0rpx 2rpx 0rpx 0rpx rgb(161, 161, 161);
  margin-top: 40px;
  margin-bottom: 20px;
}

.input-area button {
  margin-top: 40px;
  margin-bottom: 40px;
  margin-left: 25px;
  margin-right: 25px;
  background-color: rgb(116, 185, 255);
  color: #fff;
}
