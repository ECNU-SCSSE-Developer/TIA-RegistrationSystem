<!--pages/teamform_filter/teamform_filter.wxml-->

  <view class="page__bd">

    <view class="weui-form-preview">
      <view class="circle">
        <view class="weui-form-preview__hd">
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">队伍名称</view>
            <view class="weui-form-preview__value_in-hd">{{team.recruitName}}</view>
          </view>
        </view>
      </view>
      <view class="circle1">
        <view class="weui-form-preview__bd">
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">队长</view>
            <view class="weui-form-preview__value">{{student.studentName}}</view>
          </view>

          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">需求</view>
            <view class="weui-form-preview__value">{{team.recruitRequirements}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">简介</view>
            <view class="weui-form-preview__value">{{team.recruitDescription}}</view>
          </view>

          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">联系方式</view>
            <view class="weui-form-preview__value">{{student.contacts}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">所属比赛</view>
            <view class="weui-form-preview__value">{{team.matchName}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">报名情况</view>
            <view class="weui-form-preview__value">{{team.registeredNumber}}/{{team.willingNumber}}</view>
          </view>
        </view>
        <!--view class="weui-form-preview__ft">
                <navigator url="../index/index" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active"><button>我要申请</button></navigator>

            </view-->
      </view>
    </view>
  
      <button class="btn" bindtap="participation">
   {{apply}} 
  </button>
   
 
    <button class="btn" bindtap="attention">{{focused}}</button>
  </view>
